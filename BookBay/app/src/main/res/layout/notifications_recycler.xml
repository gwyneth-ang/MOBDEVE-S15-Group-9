<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvNotifications"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#000000"
        android:fontFamily="@font/cormorant_garamond_semibold"
        android:gravity="center"
        android:text="Notifications"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotifications"
        android:layout_width="match_parent"
        android:layout_height="594dp"
        app:layout_constraintTop_toBottomOf="@id/tvNotifications" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBottomNav"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvNotifications">

        <LinearLayout
            android:id="@+id/llThriftStore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/llNotifBell">

            <ImageView
                android:id="@+id/ivThriftStore"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/book_shop_black" />

            <TextView
                android:id="@+id/tvThriftStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cormorant_garamond"
                android:text="Thrift Store"
                android:layout_marginTop="5sp"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNotifBell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/llThriftStore"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/llOrders">

            <ImageView
                android:id="@+id/ivNotifBell"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/bell_black" />

            <TextView
                android:id="@+id/tvNotifBell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cormorant_garamond"
                android:text="Notifications"
                android:layout_marginTop="5sp"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOrders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/llNotifBell"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/llAccount">

            <ImageView
                android:id="@+id/ivOrders"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/clipboard_black" />

            <TextView
                android:id="@+id/tvOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cormorant_garamond"
                android:text="Orders"
                android:layout_marginTop="5sp"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAccount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/llOrders"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivAccount"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/user_black" />

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cormorant_garamond"
                android:text="Account"
                android:layout_marginTop="5sp"
                android:textSize="13sp" />
        </LinearLayout>


