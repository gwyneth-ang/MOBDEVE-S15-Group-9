<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF9F6">

    <LinearLayout
        android:id="@+id/ll_viewbookingdetails_search"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D14031"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <SearchView
            android:id="@+id/Sv_viewbookingdetails_seach_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="8sp"
            android:layout_marginTop="8sp"
            android:layout_marginEnd="8sp"
            android:layout_marginBottom="8sp"
            android:background="@drawable/custom_search_bar"
            android:backgroundTint="#FFFFFF"
            android:iconifiedByDefault="false"
            android:layoutDirection="rtl"
            android:queryBackground="@android:color/transparent"
            android:queryHint="Search by book title or author"
            android:searchIcon="@drawable/loupe"
            android:textDirection="ltr"></SearchView>

        <ImageButton
            android:id="@+id/Bt_viewbookingdetails_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_marginEnd="8sp"
            android:layout_marginBottom="8sp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/filter" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_viewbookingdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="10sp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/include3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_viewbookingdetails_search">

        <ImageView
            android:id="@+id/Iv_viewbookingdetails_book_image"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            app:srcCompat="@drawable/girl" />

        <TextView
            android:id="@+id/Tv_viewbookingdetails_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cormorant_garamond_medium"
            android:gravity="center_horizontal"
            android:text="Book Title"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/Tv_viewbookingdetails_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans"
            android:gravity="center_horizontal"
            android:text="By Author Name"
            android:textColor="#999999"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_viewbookingdetails_owner_lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:divider="?android:dividerHorizontal"
            android:orientation="vertical"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:showDividers="beginning|end">

            <LinearLayout
                android:id="@+id/ll_viewbookingdetails_owner_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20sp"
                android:paddingTop="5sp"
                android:paddingEnd="20sp"
                android:paddingBottom="5sp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/Iv_viewbookingdetails_owner_image"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    app:shapeAppearanceOverlay="@style/circular"
                    app:srcCompat="@drawable/user_black" />

                <TextView
                    android:id="@+id/Tv_viewbookingdetails_owner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans"
                    android:paddingStart="10sp"
                    android:text="User Name"
                    android:textColor="#999999" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_viewbookingdetails_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="10sp">

            <LinearLayout
                android:id="@+id/Bt_viewbookingdetails_new"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_border"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10sp"
                android:paddingBottom="10sp">

                <TextView
                    android:id="@+id/Tv_viewbookingdetails_new_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cormorant_garamond_semibold"
                    android:text="New"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Tv_viewbookingdetails_new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cormorant_garamond_medium"
                    android:text="₱1020.00"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Bt_viewbookingdetails_good"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_border"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10sp"
                android:paddingBottom="10sp">

                <TextView
                    android:id="@+id/Tv_viewbookingdetails_good_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cormorant_garamond_semibold"
                    android:text="Good"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Tv_viewbookingdetails_good_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cormorant_garamond_medium"
                    android:text="₱900.00"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Bt_viewbookingdetails_acceptable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_border"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10sp"
                android:paddingBottom="10sp">

                <TextView
                    android:id="@+id/Tv_viewbookingdetails_acceptable_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cormorant_garamond_semibold"
                    android:text="Acceptable"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Tv_viewbookingdetails_acceptable_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cormorant_garamond_medium"
                    android:text="₱720.00"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/Bt_viewbookingdetails_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15sp"
            android:backgroundTint="#000000"
            android:fontFamily="@font/cormorant_garamond_medium"
            android:text="Place Order" />
    </LinearLayout>

    <include layout="@layout/navigation_bar"/>

</androidx.constraintlayout.widget.ConstraintLayout>